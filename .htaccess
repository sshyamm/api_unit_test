RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^api/user/register/?$ index.php?action=register [QSA,L]
RewriteRule ^api/user/login/?$ index.php?action=login [QSA,L]
RewriteRule ^api/user/([0-9]+)/profile/?$ index.php?user_id=$1&action=profile [QSA,L]
RewriteRule ^api/user/([0-9]+)/edit_student/?$ index.php?user_parent_id=$1&action=edit_student [QSA,L]
RewriteRule ^api/user/([0-9]+)/edit_teacher/?$ index.php?user_parent_id=$1&action=edit_teacher [QSA,L]
RewriteRule ^api/user/([A-Za-z0-9]+)/change_password/?$ index.php?user_name=$1&action=change_password [QSA,L]
